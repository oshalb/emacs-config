;;; Code:
(defun oshal/setup-ui (frame)
  "Apply UI settings to FRAME."
  (with-selected-frame frame
    (tool-bar-mode -1) ; Hides the tool bar
    (scroll-bar-mode -1) ; Hides scroll bar
    (global-visual-line-mode +1) ; Word wrap
    (global-display-line-numbers-mode 1) ; Display line numbers
    (setq ring-bell-function 'ignore) ; Removes the annoying alert sound
    (set-frame-parameter frame 'fullscreen 'maximized)
    (set-frame-parameter frame 'undecorated t)
    (set-frame-font "Source Code Pro-16" nil t)))

;; Run for existing frame (when not daemon)
(when (display-graphic-p)
  (oshal/setup-ui (selected-frame)))

;; Run for new frames (daemon + emacsclient)
(add-hook 'after-make-frame-functions #'oshal/setup-ui)

